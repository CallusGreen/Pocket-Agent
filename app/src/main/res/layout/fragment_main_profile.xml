<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/profile_web_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="125sp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18.75sp"
                android:fontFamily="@font/arvo"
                android:text="Profile"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175sp"
                android:layout_marginLeft="175sp"
                android:layout_marginTop="62.5sp"
                android:fontFamily="@font/arvo"
                android:text="Username"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_tagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175sp"
                android:layout_marginLeft="175sp"
                android:layout_marginTop="92.5sp"
                android:fontFamily="@font/arvo"
                android:text="User Tagline"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_toRightOf="@id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60sp">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/profile_message_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/ic_message_white_24dp"
                    android:background="@color/colorPrimary"
                    />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/profile_follow_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/ic_not_following"
                    android:background="@color/colorPrimary"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="175sp"
                android:layout_marginLeft="175sp"
                android:layout_marginTop="130sp">

                <TextView
                    android:id="@+id/profile_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arvo"
                    android:text="Tags:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text="List of tags"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/arvo"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="125sp"
                android:layout_height="125sp"
                android:layout_marginStart="25sp"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="62.5sp"
                android:src="@color/colorAccent" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginStart="25sp"
            android:paddingTop="10sp"
            android:text="Bio:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/profile_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:text="Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginLeft="25sp"
                android:layout_gravity="center_vertical"
                android:text="User Rating:"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <RatingBar
                android:id="@+id/profile_rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10sp"
                android:paddingLeft="10sp"
                android:paddingEnd="0sp"
                android:paddingRight="0sp"
                android:numStars="5"
                android:stepSize="0.5"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginLeft="25sp"
            android:layout_gravity="center_vertical"
            android:text="Social Media:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <LinearLayout
            android:paddingTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="25sp"
            android:paddingLeft="25sp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/profile_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_021_facebook"
                android:background="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/profile_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:src="@drawable/ic_025_instagram"
                android:background="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/profile_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:src="@drawable/ic_043_twitter"
                android:background="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/profile_soundcloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:src="@drawable/ic_004_soundcloud"
                android:background="#FFFFFF"
                />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:src="@drawable/ic_email_black_24dp"
                android:background="#FFFFFF"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:layout_marginStart="25sp"
            android:layout_marginLeft="25sp"
            android:layout_gravity="center_vertical"
            android:text="Comments:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/comment_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/arvo"
            android:text="Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default "/>

        <TextView
            android:id="@+id/comment_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            android:textSize="15sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/arvo"
            android:text="Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default "/>

        <TextView
            android:id="@+id/comment_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/arvo"
            android:text="Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default Default "/>

    </LinearLayout>

</ScrollView>